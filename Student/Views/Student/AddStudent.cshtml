@model Student.Models.Studenttbl

@{ ViewData["Title"] = "AddStudent";
    if (ViewBag.Message != null)
    {
        if (ViewBag.Message == "Registration Done Succefully!")
        {
    <h2 class="alert alert-success"><span class="glyphicon glyphicon-ok-circle"></span> @ViewBag.Message</h2> }
        else
        {
    <h2 class="alert alert-danger"><span class="glyphicon glyphicon-remove-circle"></span> @ViewBag.Message</h2> }
        }
    }

<hr />
<div class="row">
    <form asp-action="AddStudent" enctype="multipart/form-data">
        <div class="col-lg-12">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                
                <div class="form-group">
                    <label asp-for="Lastname" class="control-label"></label>
                    <input asp-for="Lastname" class="form-control" />
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dept" class="control-label"></label>
                    <input asp-for="Dept" class="form-control" />
                    <span asp-validation-for="Dept" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rollno" class="control-label"></label>
                    <input asp-for="Rollno" class="form-control" />
                    <span asp-validation-for="Rollno" class="text-danger"></span>
                </div>
             
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-save"></span> Save
                </button>
            </div>


        </div>
    </form>
</div>

<div>
    <a asp-action="AllStudents" class=" btn btn-primary"><span class="glyphicon glyphicon-list"></span>All Students</a>
</div>





